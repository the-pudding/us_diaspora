.intro
    display flex
    flex-direction: column
    height 100vh
    width 100%
    background-color: $thisBlue
    position: fixed

    &__button
        // max-width: 80px
        margin 0 auto
        text-align: center
        font-weight 800
        text-transform: uppercase
        font-size: 24px
        padding-bottom: 2rem
        @media (max-width: 550px)
            font-size 16px
            padding-top 0.5rem


    &__blurb
        position: absolute
        // top 50%
        width 80vw
        background-color: #292c3c
        left 50%
        transform: translate(-50%,-50%)
        z-index 20000
        color white
        -webkit-box-shadow: 4px 4px 6px 0px rgba(14,14,14,0.75);
        -moz-box-shadow: 4px 4px 6px 0px rgba(14,14,14,0.75);
        box-shadow: 4px 4px 6px 0px rgba(14,14,14,0.75);
        // transition transform 0.4s;
        transition top 1s ease 0s
        cursor pointer
        
            

    

    &__scroll-cue
        position: absolute
        width 100%
        bottom: 3%
        z-index: 1

        .scroll-cue-text
            -webkit-animation-name: Floatingx;
            -webkit-animation-duration: 3s;
            -webkit-animation-iteration-count: infinite;
            -webkit-animation-timing-function: ease-in-out;
            -moz-animation-name: Floating;
            -moz-animation-duration: 3s;
            -moz-animation-iteration-count: infinite;
            -moz-animation-timing-function: ease-in-out;
            text-align: center
            font-family: $national
            color: white
            text-transform: uppercase
            text-shadow: 0px 3px 3px #000
            font-weight: 600
            // margin-left: 30px;
            // margin-top: 5px;




    &__byline
        text-align: right
        font-family $national
        color white 
        visibility hidden

        a
            color white
            text-decoration underline white


    &__cover-text
        height 20vh
        position absolute
        bottom 0
        background-color: $thisBlue
        width 100%
        transition: transform 0.35s ease-out;
        z-index: 5

        .progress-bar
            position: absolute
            top: 1px
            border-top: 2px solid $thisPink
            height 1px
            // width 100%
        // display flex
        // flex-direction: column
        // width 100%
        // padding-right 2rem
    
    &__cover-viz
        width 100%
        height 100vh

        .misc-info
            position: fixed
            bottom 0%
            width 8vw
            margin 0 auto
            background-color: #292c3c
            height 5vh
            left 50%
            // transform: translate(-50%,0)
            z-index: 100000
            padding 0.25rem
            -webkit-box-shadow: 2px 0px 14px -2px rgba(0,0,0,0.75);
            -moz-box-shadow: 2px 0px 14px -2px rgba(0,0,0,0.75);
            box-shadow: 2px 0px 14px -2px rgba(0,0,0,0.75);
            border-radius: 3px
            transition 0.35s ease 0s
            @media (max-width: 550px)
                width 20vw
                margin-bottom 0.4rem
            // visibility: hidden

            // border-top 0.5px solid gray
            // border-left 0.5px solid gray
            // border-right 0.5px solid gray

            &__info
            &__method
                width 47%
                display: inline
                cursor: pointer
                // stroke gray
        // pointer-events: none

    &__copy-container
        max-width 40rem
        margin 0 auto        

        .intro-text
            font-family $national
            color white  


@-webkit-keyframes Floatingx{
    from {-webkit-transform:translate(0, 0px);}
    65% {-webkit-transform:translate(0, 15px);}
    to {-webkit-transform: translate(0, -0px);    }    
}
    
@-moz-keyframes Floating{
    from {-moz-transform:translate(0, 0px);}
    65% {-moz-transform:translate(0, 15px);}
    to {-moz-transform: translate(0, -0px);}    
} 


