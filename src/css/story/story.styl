.mapboxgl-popup {
  max-width: 200px;
}

.mapboxgl-popup-content {
  text-align: center;
  font-family: 'Open Sans', sans-serif;
}

.explore
    &__viz
        // display flex
        // flex-direction: row
        height 100vh
        width 100%
        position: relative

    &__chart
        width 100%
        height 100vh

    &__nav-bar        
        z-index: 10
        position fixed  
        padding 1rem 1.5rem 1rem 0.5rem
        transform: translateX(-95%)   
        // width 20%
        width 12rem
        height 90%        
        top 5%
        left 0
        // background-color: #222746
        background-color: #1D1D1D
        box-shadow 1px 2px 10px #171717
        border-radius 5px
        display flex
        flex-direction: column
        transition transform 0.4s;
        position absolute
        cursor pointer
        @media (max-width: 550px)
             width auto
             height 70%
             top 15%
        

        .button-list
            overflow: scroll            
            height 100%
            overflow-y scroll

            .country-button
                font-family: $national
                color: white
                cursor pointer
                padding-top 0.05rem
                font-size: 14px
        
        .nav-title
            color #E33773
            font-weight: 800
            font-size: 16px
            // text-decoration: underline
            text-transform: uppercase
        
        .nav-intro
            font-size 18px
            color white
            font-family: $national
            margin-bottom 1rem
            @media (max-width: 550px)
                display: none




    // &__nav-bar:hover        
        // transform: translateX(0)   
    
    &__expand-tab
        margin auto
        transform translate(100%, 0)
        // visibility: hidden
        position: absolute
        bottom 50%
        right 1%
        cursor pointer

        .triangle-left  
            height: 2rem
            width: 2rem
            border-bottom-right-radius: 4rem
            border-top-right-radius: 4rem
            // background #222746
            background #1D1D1D
            -webkit-box-shadow: 1px 2px 10px #171717;
            box-shadow: 10px 0 8px 0px #171717
            
            // Adding movement button
            &:before,
            &:after
                content: "";
                position: absolute;
                background-color: white;
                transition: transform 0.5s ease-out;
            
            &:before
                top: 15%;
                left: 50%;
                width: 4px;
                height: 70%;
                margin-left: -2px;

            &:after
                top: 50%;
                left: 15%;
                width: 70%;
                height: 4px;
                margin-top: -2px;
            
            &.collapsed                // cursor: pointer

                &:before
                    transform: rotate(90deg);
                
                &:after
                    transform: rotate(180deg);        
 

    &__header
        font-size: 36px
        color $thisPink
        font-weight: 600
        font-family: $national

.fade
    content: "";
    position: absolute;
    z-index: 1;
    bottom: 0;
    left: 0;
    pointer-events: none;
    background-image: linear-gradient(to bottom, rgba(60,59,110,0), rgba(60,59,110, 1) 100%);
    width: 100%;
    height: 5em;

